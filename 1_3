int ledpin_yellow=5;// initialize pin 11
int ledpin_red=0;
int ledpin_green=9;
int inpin=13;// initialize pin 7
int val ;// define val
int flag=0;
int chek=1;
void setup()
{
pinMode(ledpin_red,OUTPUT);
pinMode(ledpin_yellow,OUTPUT);
pinMode(ledpin_green,OUTPUT);
attachInterrupt(inpin, changee, FALLING);

}

void loop()
{
}
void changee()
{
if(flag==0)
{
if (chek==1)
{
digitalWrite(ledpin_red, HIGH);
flag=1;
}
else
{
digitalWrite(ledpin_red, LOW);
}
if(chek==2)
{
flag=1;
digitalWrite(ledpin_yellow, HIGH);
}
else
{
digitalWrite(ledpin_yellow, LOW);
}
if(chek==3)
{
digitalWrite(ledpin_green, HIGH);
flag=1;
chek=0;
}
else
{
digitalWrite(ledpin_green, LOW);
}

}
if(flag==1)
{
chek=chek+1;
flag=0;
}
}
